{
  "platform": [
    {
      "id": "velocity",
      "proxy": true,
      "configManipulation": [
        {
          "file": "velocity.toml",
          "actions": [
            {
              "type": "OVERWRITE",
              "keyword": "bind",
              "content": "%hostname%:%port%"
            }
          ]
        },
        {
          "file": "forwarding.secret",
          "actions": [
            {
              "type": "GENERATE_AND_FILL_FILE",
              "content": "%proxy_secret%"
            }
          ]
        }
      ],
      "versions": [
        {
          "version": "3.3.0-SNAPSHOT",
          "downloadUrl": "https://api.papermc.io/v2/projects/velocity/versions/3.3.0-SNAPSHOT/builds/400/downloads/velocity-3.3.0-SNAPSHOT-400.jar"
        }
      ]
    },
    {
      "id": "bungeecord",
      "proxy": true,
      "configManipulation": [
          {
          "file": "config.yml",
          "actions": [
            {
              "type": "OVERWRITE",
              "keyword": "  host",
              "content": "%hostname%:%port%"
            }
          ]
        }
      ],
      "versions": [
        {
          "version": "latest",
          "downloadUrl": "https://ci.md-5.net/job/BungeeCord/lastSuccessfulBuild/artifact/bootstrap/target/BungeeCord.jar"
        }
      ]
    },
    {
      "id": "paper",
      "configManipulation": [
          {
          "file": "server.properties",
          "actions": [
            {
              "type": "OVERWRITE",
              "keyword": "online-mode",
              "content": "false"
            },
             {
              "type": "OVERWRITE",
              "keyword": "server-name",
              "content": "%server_name%"
            },
             {
              "type": "OVERWRITE",
              "keyword": "server-port",
              "content": "%port%"
            }
          ]
        },
        {
          "file": "eula.txt",
          "actions": [
            {
              "type": "GENERATE_AND_FILL_FILE",
              "content": "eula=true"
            }
          ]
        },
         {
          "file": "spigot.yml",
          "actions": [
            {
              "type": "OVERWRITE",
              "parentGroupPlatformPredicate": "bungeecord",
              "keyword": "bungeecord",
              "content": "true"
            }
          ]
        }
      ],
      "versions": [
        {
          "version": "1.21",
          "downloadUrl": "https://api.papermc.io/v2/projects/paper/versions/1.21/builds/37/downloads/paper-1.21-37.jar"
        }
      ]
    }
  ]
}
