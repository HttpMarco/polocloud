{
  "name": "PUMPKIN_CONFIG_TASK",
  "steps": [
    {
      "name": "Motd",
      "description": "Change the motd if no file present",
      "filename": "config/configuration.toml",
      "action": {
        "type": "PlatformFilePropertyUpdateAction",
        "key": "motd",
        "fileMode": "IF_NOT_EXISTS",
        "value": "§b§lPolocloud §8- §7Simple and lightweight §8- §f%version%\\\\n§8» §7GitHub§8: §f§ngithub.polocloud.de"
      }
    },
    {
      "name": "Update server port",
      "description": "Change Server Port for all spigot forks",
      "filename": "config/configuration.toml",
      "action": {
        "type": "PlatformFilePropertyUpdateAction",
        "key": "java_edition_address",
        "value": "0.0.0.0:%port%"
      }
    },
    {
      "name": "Update bedrock edition",
      "description": "Change Server Port for all spigot forks",
      "filename": "config/configuration.toml",
      "action": {
        "type": "PlatformFilePropertyUpdateAction",
        "key": "bedrock_edition",
        "value": "false"
      }
    },
    {
      "name": "Update online mode",
      "description": "Change the online mode setting for pumpkin",
      "filename": "config/configuration.toml",
      "action": {
        "type": "PlatformFilePropertyUpdateAction",
        "key": "online_mode",
        "value": "false"
      }
    },
    {
      "name": "Update proxy enable",
      "description": "Change the online mode setting for all spigot forks",
      "filename": "config/features.toml",
      "action": {
        "type": "PlatformFilePropertyUpdateAction",
        "key": "networking.proxy.enabled",
        "value": "true"
      }
    },
    {
      "name": "Update velocity enable",
      "description": "Change the online mode setting for all spigot forks",
      "filename": "config/features.toml",
      "action": {
        "type": "PlatformFilePropertyUpdateAction",
        "key": "networking.proxy.velocity.enabled",
        "value": "%velocity_use%"
      }
    },
    {
      "name": "Update velocity secret",
      "description": "Change the online mode setting for all spigot forks",
      "filename": "config/features.toml",
      "action": {
        "type": "PlatformFilePropertyUpdateAction",
        "key": "networking.proxy.velocity.secret",
        "value": "%velocityProxyToken%"
      }
    },
    {
      "name": "Server Icon",
      "description": "Changes the path of the server icon in config",
      "filename": "config/configuration.toml",
      "action": {
        "type": "PlatformFilePropertyUpdateAction",
        "key": "favicon_path",
        "value": "server-icon.png"
      }
    }
  ]
}